# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_EMBEDDING_MODEL=models/embedding-001
GEMINI_GENERATION_MODEL=gemini-pro

# Qdrant Cloud Configuration
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_COLLECTION_NAME=gemini_embeddings

# Neon Postgres Database
DATABASE_URL=postgresql+asyncpg://user:password@host.neon.tech/database

# API Server Configuration
API_PORT=8000
API_KEY=your_admin_api_key_here

# Frontend Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging Configuration
LOG_LEVEL=INFO
JSON_LOGS=false

# MCP Server Configuration (Optional - Legacy)
MCP_SERVER_PATH=./mcp_server
MCP_SERVER_PORT=5000

# Content Sync Configuration
DOCS_PATH=../docs
SYNC_INTERVAL_HOURS=6

# Performance Configuration
EMBEDDING_BATCH_SIZE=10
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# RAG Pipeline Configuration
RETRIEVAL_TOP_K=5
RETRIEVAL_SCORE_THRESHOLD=0.7
CHUNK_SIZE_TOKENS=800
CHUNK_OVERLAP_TOKENS=160

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# OpenAI Configuration (Legacy - Optional)
# OPENAI_API_KEY=your_openai_api_key_here
# EMBEDDING_MODEL=text-embedding-3-large
# CHAT_MODEL=gpt-4
